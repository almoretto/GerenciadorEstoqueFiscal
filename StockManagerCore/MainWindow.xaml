<Window x:Class="StockManagerCore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StockManagerCore"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="30,10,0,0" Text="Sistema de Controle de Estoque" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="-2.313,-0.875" Background="{DynamicResource {x:Static SystemColors.AppWorkspaceBrushKey}}" FontSize="20" FontWeight="Bold"/>
        <TabControl Margin="0,42,0,0">
            <TabItem Header="Funções">
                <Grid Background="#FFE5E5E5">
                    <TextBox x:Name="FileNameTextBox" HorizontalAlignment="Left" Margin="34,33,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <Button x:Name="BtnFileOpen" Content="Selecionar" HorizontalAlignment="Left" Margin="170,32,0,0" VerticalAlignment="Top"/>
                    <Button x:Name="ProcessFile" Content="Processar Arquivo" HorizontalAlignment="Left" Margin="34,65,0,0" VerticalAlignment="Top" Click="ProcessInputs_Click"/>
                    <Button x:Name="ProcessSales" Content="Processar Saídas" HorizontalAlignment="Left" Margin="34,119,0,0" VerticalAlignment="Top" Width="103" Click="ProcessSales_Click"/>
                    <TextBlock x:Name="Log_TextBlock" HorizontalAlignment="Center" Margin="34,200,0,0" Text="Log" TextWrapping="Wrap" VerticalAlignment="Top" Width="741" Height="137" FontWeight="Normal"/>
                    <CheckBox x:Name="InputOutput" Content="Marque se o arquivo for de Vendas" HorizontalAlignment="Left" Margin="149,70,0,0" VerticalAlignment="Top" Width="210" Height="17"/>
                    <CheckBox x:Name="NFUn" Content="Marque se a unidade for duzia" HorizontalAlignment="Left" Margin="149,92,0,0" VerticalAlignment="Top" Width="210"/>
                </Grid>
            </TabItem>
            <TabItem Header="Dados">
                <Grid Background="#FFE5E5E5" Height="364"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
