<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StockManagerCore"
        xmlns:Models="clr-namespace:StockManagerCore.Models" x:Class="StockManagerCore.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="30,10,0,0" Text="Sistema de Controle de Estoque" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="-2.313,-0.875" Background="{DynamicResource {x:Static SystemColors.AppWorkspaceBrushKey}}" FontSize="20" FontWeight="Bold"/>
        <TabControl Margin="0,42,0,0">
            <TabItem Header="Funções">
                <Grid Background="#FFE5E5E5">
                    <TextBox x:Name="FileNameTextBox" HorizontalAlignment="Left" Margin="40,23,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="386"/>
                    <Button x:Name="BtnFileOpen" Content="Selecionar" HorizontalAlignment="Left" Margin="437,21,0,0" VerticalAlignment="Top" Click="BtnFileOpen_Click"/>
                    <Button x:Name="ProcessFile" Content="Processar Arquivo" HorizontalAlignment="Left" Margin="40,73,0,0" VerticalAlignment="Top" Click="ProcessInputs_Click"/>
                    <Button x:Name="ProcessSales" Content="Processar Saídas" HorizontalAlignment="Left" Margin="160,73,0,0" VerticalAlignment="Top" Width="103" Click="ProcessSales_Click"/>
                    <TextBlock x:Name="Log_TextBlock" HorizontalAlignment="Left" Margin="40,169,0,0" Text="Log" TextWrapping="Wrap" VerticalAlignment="Top" Width="741" Height="160" FontWeight="Normal"/>
                    <ComboBox x:Name="CMB_Company" HorizontalAlignment="Left" Margin="40,46,0,0" VerticalAlignment="Top" Width="386" ItemsSource="{Binding Name}" IsEnabled="False">
                        <ComboBox.DataContext>
                            <Models:Company/>
                        </ComboBox.DataContext>
                    </ComboBox>
                    <TextBox x:Name="Date_txt" HorizontalAlignment="Left" Margin="40,110,0,0" Text="Data Cálculo" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" InputScope="Date"/>
                    <Button Content="Calcular" HorizontalAlignment="Left" Margin="172,110,0,0" VerticalAlignment="Top" Click="Button_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="Dados">
                <Grid Background="#FFE5E5E5" Height="364"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
